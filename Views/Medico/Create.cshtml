@model Turnos.Models.Medico

<h4>MÃ©dico</h4>

<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre">Nombre</label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido">Apellido</label>
                    <span asp-validation-for="Apellido"></span>
                </div>

                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion">Direccion</label>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="tel" class="validate">
                    <label asp-for="Telefono">Telefono</label>
                    <span asp-validation-for="Telefono"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">local_post_office</i>
                    <input asp-for="Email" type="email" class="validate">
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="input-field col s6">
                    <i class="material-icons prefix">alarm</i>
                    <label asp-for="HorarioAtencionDesde"></label>
                    <input type="text" class="timepicker" asp-for="HorarioAtencionDesde">
                    <span asp-validation-for="HorarioAtencionDesde"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">alarm</i>
                    <label asp-for="HorarioAtencionHasta"></label>
                    <input type="text" class="timepicker" asp-for="HorarioAtencionHasta">
                    <span asp-validation-for="HorarioAtencionHasta"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">star_rate</i>
                    <select name="IdEspecialidad" asp-items="ViewBag.ListaEspecialidades"></select>
                </div>
            </div>

            <div class="row">
                <div class="right col s2">
                    <button class="btn waves-effect waves-light green darken-2 right" type="submit" name="Create">Crear
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="right col s10">
                    <a class="waves-effect waves-light btn red lighten-2 right" asp-action="Index"><i
                            class="material-icons left">undo</i>Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>