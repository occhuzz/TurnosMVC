@model Turnos.Models.Especialidad //razor

<h4>Especialidad</h4>

<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="IdEspecialidad"/>
        <div>
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion"/>
            <span asp-validation-for="Descripcion"></span>
        </div>
        
        <div class="row">
                <div class="right col s2">
                    <button class="btn waves-effect waves-light green darken-2 right" type="submit" name="Edit">Guardar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="right col s10">
                    <a class="waves-effect waves-light btn red lighten-2 right" asp-action="Index"><i
                            class="material-icons left">undo</i>Volver</a>
                </div>
            </div>
    </form>
</div>